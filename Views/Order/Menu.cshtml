@model IEnumerable<MVCBarApplication.Models.Cocktail>

@{
    ViewData["Title"] = "Cocktail Menu";
}

<h1>Cocktail Menu</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@item.Price.ToString("C")</h6>
                    <p class="card-text">@item.Description</p>

                    <form asp-action="PlaceOrder" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="cocktailId" value="@item.Id" />
                        <div class="form-group mb-2">
                            <input type="text" name="customerName" class="form-control" placeholder="Enter Your Name" required />
                        </div>
                        <button type="submit" class="btn btn-success">Place Order</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>